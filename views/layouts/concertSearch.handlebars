<h1>Concerts Search</h1>
<main>
    <div class="nav">
        <a class="login" href="/home">home</a>
    </div>
    
    <form action="/action_page.php">
    <p>Please select your gender:</p>
        <input type="radio" name="searchFilter" value="artist"> Artist
        <input type="radio" name="searchFilter" value="address"> Location
        <input type="radio" name="searchFilter" value="genre"> Genre
        <input type="radio" name="searchFilter" value="venue"> Venue
        <input type="radio" name="searchFilter" value="title"> Title<br>
  		Search Concert: <input type="search" name="searchContent"><br>
  		<label for="fromDate">Date: From:</label>
        <input type="date" id="fromDate" name="fromDate" min="2020-01-01" max="2018-01-01">
        <label for="fromDate">To:</label>
        <input type="date" id="toDate" name="toDate" min="2020-01-01" max="2018-01-01"><br>
        
        <label for="fromDate">Price: From:</label>
        <input type="number" id="fromPrice" name="fromPrice" min=0>
        <label for="fromDate">To:</label>
        <input type="number" id="toPrice" name="toPrice" min=0><br>
  		<input type="submit">
    {{#if hasErrors}}
    <p class="error">
        {{#each errors}}
            {{this}}
        {{/each}}
    </p>
    {{/if}}
</main>