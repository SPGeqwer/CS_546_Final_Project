<div class="nav">
    <a class="login" href="/">home</a>
    <a class="login" href="/concerts">concerts</a>
    <a class="login" href="/profile">profile</a>
    <a class="login" href="/logout">logout</a>
</div>
<main>
    <h1>{{artist.details.name}}</h1>
    {{#if likeFlag}}
    <a href="/artists/details/{{artist._id}}/yes"><button class="like-button liked"></button></a>
    {{else}}
    <a href="/artists/details/{{artist._id}}/no"><button class="like-button"></button></a>
    {{/if}}

    <br><br><br>
    <dl>
        <h3>Genre</h3><br>
        <dd><a href="/artists/genre/{{artist.details.genre}}">{{artist.details.genre}}</a></dd><br>
        <h3>Website</h3><br>
        <dd><a href="{{artist.details.website}}">{{artist.details.website}}</a></dd><br>
    </dl>

    <h3>Upcoming Concerts</h3>
    {{#if artist.details.concertsToPerform.length}}
    <ul>
        {{#each artist.details.concertsToPerform}}
        <li><a href="/concerts/details/{{this}}">Concert Link</a></li>
        {{/each}}
    </ul>
    {{else}}
    <p>No future concerts scheduled yet!</p>
    {{/if}}


    <h3>Comments</h3>
    {{#if artist.comments.length}}
    <ul>
        {{#each artist.comments}}
        <li>
            <p>{{this.time}}</p>
            <p>User:</p>
            <a href="/profile/{{this.user}}">{{this.user}}</a>
            <p>Comment: {{this.comment}}</p>
        </li>
        {{/each}}
    </ul>
    {{else}}
    <p>Be the first one to leave a comment!</p>
    {{/if}}

    <div id="respond">

        <h3>Leave a Comment</h3>

        <form action="/artists/details/{{artist._id}}/comment" method="post" id="commentform">

            <label for="comment" class="required"></label>
            <textarea name="comment" id="comment" rows="6" tabindex="4" required="required"></textarea>

            <input name="submit" type="submit" value="Submit Comment" />

        </form>

    </div><br><br>

    <a href="/artists">Make another search</a>
</main>