            title<input type="text" name="title"><br>
            artists<input type="text" name="artists[]"><input type="text" name="artists[]"><br>
            date<input type="text" name="date"><br>
            time<input type="text" name="time"><br>
            address<input type="text" name="address"><br>
            zipcode<input type="text" name="zipcode"><br>
            venue<input type="text" name="venue"><br>
            genre<input type="text" name="genre[]"><input type="text" name="genre[]"><br>
            description<input type="text" name="description"><br>
            ticketPrice<input type="number" name="ticketPrice"><br>
            <button type ="submit">Creat</button>
        </form>
</main>    